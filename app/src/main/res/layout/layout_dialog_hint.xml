<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:textColor="@color/colorSubTitleGrey"
        android:textSize="16sp"
        tools:text="您輸入您輸入您輸入您" />

    <tw.edu.nutc.imac.blockchainfingerprint.util.view.CustomDialogButton
        android:id="@+id/button_confirm"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text_message"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/hint_confirm"
        android:textColor="@color/colorDuckEggBlue"
        android:textSize="16sp"
        app:radiusSize="2dp"
        app:shadowSize="4dp" />

</RelativeLayout>